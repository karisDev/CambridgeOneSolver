<UserControl x:Class="CambridgeOneSolver.Views.UserControls.DonatorcUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CambridgeOneSolver.Views.UserControls"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignDarkBackground}"
             Foreground="{DynamicResource MaterialDesignDarkForeground}"
             FontFamily="/Resources/Fonts/#Google Sans"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="0,10,0,0">
            <TextBlock
                Margin="15,0"
                Text="Поддержавшие проект"
                FontSize="20" />
            <Separator Margin="0,10" />
        </StackPanel>
        <ScrollViewer
            Margin="5"
            Grid.Row="1">
            <WrapPanel>
                <materialDesign:Card
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="#ffc107"
                    Width="140">
                    <StackPanel>
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="Бро, ты лучший. Для МИСОСовца не жалко" />
                        <Separator
                          Height="5"
                          Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="23 Октября 2021"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="#ffc107"
                    Width="140">
                    <StackPanel>
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="дадя погромист не воруйте мои данные пожалуста" />
                        <Separator
                          Height="5"
                          Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="23 Октября 2021"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="#ffc107"
                    Width="140">
                    <StackPanel>
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="Спасибо тебе за эту программу, ты лучик солнца среди туч" />
                        <Separator
                          Height="5"
                          Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="23 Октября 2021"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="#ffc107"
                    Width="140">
                    <StackPanel>
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="Для настоящего героя" />
                        <Separator
                          Height="5"
                          Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="23 Октября 2021"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="#ffc107"
                    Width="140">
                    <StackPanel>
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="Опять сэкономил часов 6 времени, спасибо за такую программу :)" />
                        <Separator
                          Height="5"
                          Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Padding="5"
                            Foreground="Black"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Text="23 Октября 2021"/>
                    </StackPanel>
                </materialDesign:Card>
            </WrapPanel>
        </ScrollViewer>
        <Button
            BorderBrush="PaleVioletRed"
            Background="PaleVioletRed"
            Foreground="White"
            FontSize="15"
            Content="Оказаться в списке"
            Width="170"
            Grid.Row="2"/>
    </Grid>
</UserControl>
